                    catch (Exception ex) when (i < maxRetries - 1) {
                        Console.WriteLine($"AutoSave attempt {i + 1} failed: {ex.Message}");
                        await Task.Delay(500 * (i + 1)); // リトライ前に待機
                    }
                }
            }
        }
