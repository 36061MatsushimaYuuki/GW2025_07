    private IEnumerable<(CharacterCategory Category, IEnumerable<Character> Characters)> GetFilteredCharacterCategories() {
        if (_project?.ProjectDataObject?.Character?.Category == null) {
            return Enumerable.Empty<(CharacterCategory, IEnumerable<Character>)>();
        }

        var categories = _project.ProjectDataObject.Character.Category.AsEnumerable();

        // カテゴリフィルタ（チェックボックスで選択されたカテゴリのみ）
        if (_filteredCategories.Count > 0) {
            categories = categories.Where(c => _filteredCategories.Contains(c.Title));
        }

        // 検索フィルタ
        if (!string.IsNullOrWhiteSpace(_referenceSearchText)) {
            var searchLower = _referenceSearchText.ToLower();

            if (_searchMode == "category") {
                // カテゴリ名で検索
                categories = categories.Where(c =>
                    c.Title?.ToLower().Contains(searchLower) ?? false
                );
            } else {
                // 人物名で検索（カテゴリ内に該当人物がいる場合のみ表示）
                categories = categories.Where(c =>
                    c.Characters != null && c.Characters.Any(ch =>
                        (ch.Name?.ToLower().Contains(searchLower) ?? false) ||
                        (ch.NameRuby?.ToLower().Contains(searchLower) ?? false) ||
                        (ch.Alias?.ToLower().Contains(searchLower) ?? false)
                    )
                );
            }
        }

        // カテゴリソート
        if (_sortField == "category") {
            categories = _sortOrder == "asc"
                ? categories.OrderBy(c => c.Title)
                : categories.OrderByDescending(c => c.Title);
        }

        var result = new List<(CharacterCategory, IEnumerable<Character>)>();

        foreach (var category in categories) {
            if (category.Characters == null || category.Characters.Length == 0) continue;

            var characters = category.Characters.AsEnumerable();

            // 人物検索モード時のフィルタリング
            if (_searchMode == "item" && !string.IsNullOrWhiteSpace(_referenceSearchText)) {
                var searchLower = _referenceSearchText.ToLower();
                characters = characters.Where(c =>
                    (c.Name?.ToLower().Contains(searchLower) ?? false) ||
                    (c.NameRuby?.ToLower().Contains(searchLower) ?? false) ||
                    (c.Alias?.ToLower().Contains(searchLower) ?? false)
                );
            }

            // 名前ソート
            if (_sortField == "name") {
                characters = _sortOrder == "asc"
                    ? characters.OrderBy(c => c.Name)
                    : characters.OrderByDescending(c => c.Name);
            }

            if (characters.Any()) {
                result.Add((category, characters));
            }
        }

        return result;
    }

